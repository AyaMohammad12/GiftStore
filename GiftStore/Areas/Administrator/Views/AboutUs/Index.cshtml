<br />

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th class="text-center">The Text</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.txt)</p>
                </td>
                <td class="align-middle text-center">
                    <div class="btn-group mt-2" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary py-4 px-5 btn-xs fs-13px me-4">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary py-4 px-5 btn-xs fs-13px me-4">
                            <i class="fas fa-edit me-1"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary btn-hover-bg-danger btn-hover-border-danger btn-hover-text-light py-4 px-5 fs-13px btn-xs me-4">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
