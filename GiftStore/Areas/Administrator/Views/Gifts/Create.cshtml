@model GiftStore.Models.Gift

@{
    ViewData["Title"] = "Create";
}













<div class="dashboard-page-content">
	<div class="row mb-9 align-items-center">
		<div class="col-xxl-9">
			<div class="row">
				<div class="col-sm-6 mb-8 mb-sm-0">
					<h2 class="fs-4 mb-0">Add New gift</h2>
				</div>
				<div class="col-sm-6 d-flex flex-wrap justify-content-sm-end">
					<a href="#" class="btn btn-outline-primary me-4">Save to draft</a>
					<a href="#" class="btn btn-primary">Publish</a>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xxl-9">
			<form asp-action="Create" enctype="multipart/form-data">

			<div class="row">
				<div class="col-lg-8">
					<div class="card mb-8 rounded-4">
						<div class="card-header p-7 bg-transparent">
							<h4 class="fs-18 mb-0 font-weight-500">Basic</h4>
						</div>
						<div class="card-body p-7">
							
								<div asp-validation-summary="All" class="text-danger"></div>

								<div class="mb-8">
									<label asp-for="Name" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Gift Name</label>
									<input asp-for="Name" type="text" placeholder="Type here" class="form-control" />
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>

								<div class="mb-8">
									<label asp-for="Description" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Full description</label>
									<textarea asp-for="Description" placeholder="Type here" class="form-control" rows="4"></textarea>
									<span asp-validation-for="Description" class="text-danger"></span>
								</div>

								<div class="row">
									<div class="col-lg-4">
										<div class="mb-8">
											<label asp-for="Price" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Regular price</label>
											<input asp-for="Price" placeholder="$" type="text" class="form-control" />
											<span asp-validation-for="Price" class="text-danger"></span>
										</div>
									</div>

									<div class="col-lg-4">
										<div class="mb-8">
											<label asp-for="discount" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Discount</label>
											<input asp-for="discount" placeholder="%" type="text" class="form-control" />
											<span asp-validation-for="discount" class="text-danger"></span>
										</div>
									</div>

									<div class="col-lg-4">
										<div class="mb-8">
											<label asp-for="AvailableColors" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Colors</label>
											<input asp-for="AvailableColors" type="text" class="form-control" />
											<span asp-validation-for="AvailableColors" class="text-danger"></span>
										</div>
									</div>

									<div class="col-lg-4">
										<div class="mb-8">
											<label asp-for="numberOfItems" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Number of items</label>
											<input asp-for="numberOfItems" type="text" class="form-control" />
											<span asp-validation-for="numberOfItems" class="text-danger"></span>
										</div>
									</div>

									<div class="col-lg-4">
										<label asp-for="CategoryId" class="mb-4 fs-13px ls-1 fw-bold text-uppercase">Category</label>
										<select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
										<span asp-validation-for="CategoryId" class="text-danger"></span>
									</div>
								</div>

								<div class="form-group">
									<label asp-for="ImageUrl" class="control-label"></label>
									<input type="file" asp-for="ImageUrl" class="form-control" name="GiftImg" />
									<span asp-validation-for="ImageUrl" class="text-danger"></span>
								</div>

							

								<div class="form-group mt-4">
									<input type="submit" value="Create" class="btn btn-primary" />
								</div>

							
						</div>
					</div>
				</div>

				
			</div>

				@*<div class="col-lg-4">
					<div class="card mb-8 rounded-4">
						<div class="card-header p-7 bg-transparent">
							<h4 class="fs-18px mb-0 font-weight-500">Media</h4>
						</div>
						<div class="card-body p-7">
							<div class="input-upload">
								<div class="mb-7">
									<img src="~/assets/images/dashboard/upload.svg" width="102" class="d-block mx-auto" alt="Upload Icon">
								</div>

								<label asp-for="ImageUrl" class="control-label"></label>
								<input type="file" asp-for="ImageUrl" class="form-control" name="GiftImg" />
								<span asp-validation-for="ImageUrl" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>*@
			</form>
			<div>
				<a asp-action="Index" class="btn btn-primary" >Back to List</a>
			</div>
		</div>
	</div>
</div>
